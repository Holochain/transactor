        "role": {
          "type": "string",
          "pattern": "receiver"
        },
        "from": {
          "type": "string"
        },
        "amount": {
          "type": "number",
          "exclusiveMinimum": 0
        },
        "description": {
          "type": "string"
        },
        "preauth": {
          "type": "string"
        }
      },
      "required": [
        "role",
        "to",
        "amount",
        "preauth"
      ]
    }
  ],
  "examples": [
    {
      "role": "sender",
      "to": "receiver-hash-here",
